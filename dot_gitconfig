[user]
	name = Darek Dwornikowski
	email = dariusz.dwornikowski@gmail.com
[core]
    pager = delta
    
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true  # use n and N to move between diff sections
    #dark = true      # or light = true, or omit for auto-detection
    side-by-side = true

[color] 
  diff = auto 
  status = auto 
  branch = auto 
[format]
  pretty = %Cblue%h%Creset %Cgreen[%ar]%Creset (%an) %s
[alias] 
  git = !exec git
  ci = commit -a
  b = branch
  a = add 
  s = status 
  difflast = diff HEAD^ HEAD
  co  = checkout
  unstage = reset HEAD --
  plog = log --pretty=format:'%C(yellow)%h %Cred%ad %Cblue%an%Cgreen%d %Creset%s' --date=iso
  brancht = branch --sort=commitdate
[merge]
    conflictStyle = zdiff3
[difftool]
  prompt = false
  trustExitCode = true
[push]
	default = simple
[rerere]
  enabled = true
  autoupdate = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[init]
	defaultBranch = main

